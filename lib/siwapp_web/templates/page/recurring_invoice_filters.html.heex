<div class="columns">
  <div class="column is-6">
    <label class="label">
      CUSTOMER:
    </label>
    <.live_component module={SiwappWeb.SearchLive.CustomersInputComponent} id="customers" />
  </div>
  <div class="column is-6">
    <label class="label">
      SERIES:
    </label>
    <div class="select is-fullwidth">
      <%= select(@f, :series, ["Choose...": ""] ++ Enum.map(@series_names, &{&1, &1})) %>
    </div>
  </div>
</div>
<div class="columns">
  <div class="column is-3">
    <label class="label">
      STARTING&nbsp;DATE&nbsp;FROM:
    </label>
    <%= date_input(@f, :starting_from_date, class: "input") %>
  </div>
  <div class="column is-3">
    <label class="label">
      TO:
    </label>
    <%= date_input(@f, :starting_to_date, class: "input") %>
  </div>
  <div class="column is-3">
    <label class="label">
      FINISHING&nbsp;DATE&nbsp;FROM:
    </label>
    <%= date_input(@f, :finishing_from_date, class: "input") %>
  </div>
  <div class="column is-3">
    <label class="label">
      TO:
    </label>
    <%= date_input(@f, :finishing_to_date, class: "input") %>
  </div>
</div>
<div class="columns">
  <div class="column">
    <label class="label">
      KEY
    </label>
    <%= text_input(@f, :key, class: "input") %>
  </div>
  <div class="column">
    <label class="label">
      VALUE
    </label>
    <%= text_input(@f, :value, class: "input") %>
  </div>
</div>
